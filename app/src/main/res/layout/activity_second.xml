<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.icecold.sleepbandtest.ui.SecondActivity">
    <com.icecold.sleepbandtest.widget.CircleProgressbar
        android:id="@+id/circle_progress"
        android:layout_width="200dp"
        android:layout_height="200dp"
        />
    <ViewFlipper
        android:id="@+id/viewFlipper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autoStart="true"
        android:flipInterval="2000"
        android:background="@color/white"
        android:paddingStart="@dimen/dp_20"
        android:inAnimation="@anim/anim_text_entry"
        android:outAnimation="@anim/anim_text_out"
        >
    </ViewFlipper>
    <Button
        android:id="@+id/start_anim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开始动画"
        android:textSize="15sp"
        />
    <Button
        android:id="@+id/skip_movie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="电影列表"
        android:textSize="15sp"
        />
    <TextView
        android:id="@+id/span_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <com.icecold.sleepbandtest.widget.RoundProgressBar
        android:id="@+id/round_progress"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        app:rpb_round_color="@color/round_color"
        app:rpb_round_progress_color="@color/roundProgressColor"
        app:rpb_round_width="@dimen/dp_10"
        app:rpb_text_is_displayable="false"
        app:rpb_max="100"
        app:rpb_style="STROKE"
        />

</LinearLayout>
