<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时差计算器"
            android:textStyle="bold"
            android:textSize="@dimen/sp_36"
            android:layout_gravity="center_horizontal"
            />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_15"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="标准入睡时间"
                android:textColor="@android:color/white"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/dp_2"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:textColor="@color/text_base"
                android:text="晚上11点"
                android:background="@drawable/sleep_with_get_up_background"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_10"
                android:gravity="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="标准起床时间"
                android:textColor="@android:color/white"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/dp_2"
                />
            <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:textColor="@color/text_base"
            android:text="早上7点"
            android:background="@drawable/sleep_with_get_up_background"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:gravity="center"
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="你从哪个城市飞过?"
                android:textColor="@android:color/white"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/dp_2"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_10"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_30"
                    android:textColor="@color/text_base"
                    android:text="选择一个城市"
                    android:lines="1"
                    android:background="@drawable/sleep_with_get_up_background"
                    android:gravity="center"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dp_4"
                    android:contentDescription="@null"
                    android:src="@drawable/mcv_action_next"
                    />
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="你乘飞机到哪个城市?"
                android:textColor="@android:color/white"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/dp_2"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_10"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_30"
                    android:textColor="@color/text_base"
                    android:text="选择一个城市"
                    android:lines="1"
                    android:background="@drawable/sleep_with_get_up_background"
                    android:gravity="center"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dp_4"
                    android:contentDescription="@null"
                    android:src="@drawable/mcv_action_next"
                    />
            </RelativeLayout>

        </LinearLayout>
        <!--出发城市佩戴说明-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_40"
            android:text="在美国进行活动"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            />
        <LinearLayout
            android:layout_marginTop="@dimen/dp_15"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="日期"
                android:textColor="@android:color/white"
                android:background="@color/colorPrimary"
                android:gravity="center"
                />
            <View
                android:layout_width="@dimen/dp_2"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="时间"
                android:textColor="@android:color/white"
                android:background="@color/colorPrimary"
                android:gravity="center"
                />
            <View
                android:layout_width="@dimen/dp_2"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="活动"
                android:textColor="@android:color/white"
                android:background="@color/colorPrimary"
                android:gravity="center"
                />
        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/start_city_use_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>
        <!--到达城市佩戴使用说明-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_40"
            android:text="在美国进行活动"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            />
        <LinearLayout
            android:layout_marginTop="@dimen/dp_15"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="日期"
                android:textColor="@android:color/white"
                android:background="@color/colorPrimary"
                android:gravity="center"
                />
            <View
                android:layout_width="@dimen/dp_2"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="时间"
                android:textColor="@android:color/white"
                android:background="@color/colorPrimary"
                android:gravity="center"
                />
            <View
                android:layout_width="@dimen/dp_2"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="活动"
                android:textColor="@android:color/white"
                android:background="@color/colorPrimary"
                android:gravity="center"
                />
        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/end_city_use_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>

</ScrollView>